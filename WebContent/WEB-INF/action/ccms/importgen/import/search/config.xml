<?xml version='1.0' encoding='UTF-8'?>
<config>

	<summary>
		Ejecutar consulta usando un modulo de motor
		de bé·–queda y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>
	
	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query_import.sql" />
	<set-request-attribute id="paging.pagesize" value="30" />

	<colname>imp_name_filter</colname>
	<operator></operator>
	<sql-template>query-base.sql</sql-template>
	<paging-recordset>query_import.sql</paging-recordset>

	<transaction>
		<classname>com.ccms.Search</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>

	<on-exit return-code="0" forward-to="/action/initview"/>
	<on-exit return-code="1" forward-to="/action/notfound/withsearch"/>

</config>
